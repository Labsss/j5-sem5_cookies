<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Login</h1>
    <p class="lead">Ouverture de session</p>
  </div>
</div>



    <div class="form-group">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

        <%= label_tag 'Login (email) : ' %>
        <%= text_field_tag 'email', :email, class: "form-control"%>
        <br /> 

        <%= label_tag 'Mot de passe : ' %>
        <%= text_field_tag 'password', :password, class: "form-control" %>
        <br /> <br />

        <%= check_box_tag :remember_me %>
        <%= label_tag 'Se souvenir de moi' %>
        <br />

        <%= submit_tag "Valider", class: "btn btn-secondary " %>

      <% end %>

      <p>Pas encore inscrit ?
        <%= link_to new_user_path do %>
          S'inscrire
        <% end %>
      </p>
    </div>


